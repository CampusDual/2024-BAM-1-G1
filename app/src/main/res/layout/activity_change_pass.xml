<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/your_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="807dp"
        android:layout_marginBottom="17dp" />


    <!-- Título -->

    <TextView
        android:id="@+id/tv_change_pass_title"
        style="@style/title_30sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"
        android:text="@string/change_pass_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtítulo secundario -->
    <TextView
        android:id="@+id/change_pass"
        style="@style/subtitle_16sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="6dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/change_pass_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_change_pass_title" />

    <!-- CONTENEDOR ELIGE CONTRASEÑA-->
    <LinearLayout
        android:id="@+id/ll_change_pass_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_pass">

        <TextView
            android:id="@+id/tv_change_pass_title_password"
            style="@style/title_h3_14dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_pass_new_password" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_change_pass_password_input_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            app:errorEnabled="true"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxStrokeWidth="1dp"
            app:boxStrokeColor="@color/color_main"
            app:hintEnabled="false"> <!-- Evita que el hint flotante aparezca en rojo -->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_change_pass_password_input_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="22dp"
                android:textColor="@color/black"
                android:textColorHint="@color/color_secondary_grey"
                android:fontFamily="@font/inter_font"
                android:hint="@string/asterisks_password"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- CONTENEDOR CONFIRMAR CONTRASEÑA-->
    <LinearLayout
        android:id="@+id/ll_change_pass_confirm_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_change_pass_password">

        <TextView
            android:id="@+id/tv_change_pass_title_confirm_password"
            style="@style/title_h3_14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm_password" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_change_pass_input_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            app:errorEnabled="true"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxStrokeWidth="1dp"
            app:boxStrokeColor="@color/color_main"
            app:hintEnabled="false"> <!-- Evita que el hint flotante aparezca en rojo -->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_change_pass_input_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_font"
                android:hint="@string/asterisks_password"
                android:inputType="textPassword"
                android:padding="22dp"
                android:textColor="@color/black"
                android:textColorHint="@color/color_secondary_grey" /> <!-- Mueve el hint dentro del campo -->
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <!-- Botón de cambiar contraseña -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_change_pass_button"
        style="@style/button_solid_16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_main"
        android:padding="18dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/change_pass_button"
        app:cornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_change_pass_confirm_password" />



</androidx.constraintlayout.widget.ConstraintLayout>