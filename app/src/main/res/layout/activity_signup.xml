<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <View
            android:id="@+id/your_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"

            android:layout_marginBottom="17dp" />

        <!-- Subtítulo registro -->
        <TextView
            android:id="@+id/tv_signup_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_subtitle"
            android:layout_marginTop="60dp"
            style="@style/subtitle_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Título registro -->
        <TextView
            android:id="@+id/tv_signup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_title"
            android:layout_marginTop="6dp"
            style="@style/title_30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_signup_subtitle" />

        <!-- CONTENEDOR DE EMAIL -->
        <LinearLayout
            android:id="@+id/ll_signup_container_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_signup_title"
            >

            <TextView
                android:id="@+id/tv_signup_title_email"
                style="@style/title_h3_14dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signup_title_mail" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_signup_input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxStrokeWidth="1dp"
                app:boxStrokeColor="@color/color_main"
                app:hintEnabled="false"> <!-- Desactiva el hint flotante -->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_signup_input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_font"
                    android:hint="@string/reusable_email"
                    android:inputType="textEmailAddress"
                    android:padding="22dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_secondary_grey" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <!-- CONTENEDOR ELIGE CONTRASEÑA -->
        <LinearLayout
            android:id="@+id/ll_signup_container_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_signup_container_email">

            <TextView
                android:id="@+id/tv_signup_title_password"
                style="@style/title_h3_14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signup_title_password" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_signup_input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxStrokeWidth="1dp"
                app:boxStrokeColor="@color/color_main"
                app:hintEnabled="false"
                tools:errorEnabled="false"> <!-- Evita que el hint flotante aparezca en rojo -->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_signup_input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_font"
                    android:hint="@string/asterisks_password"
                    android:inputType="textPassword"
                    android:padding="22dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_secondary_grey" /> <!-- Mueve el hint dentro del campo -->
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- CONTENEDOR CONFIRMAR CONTRASEÑA -->
        <LinearLayout
            android:id="@+id/ll_signup_container_confirm_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_signup_container_password">

            <TextView
                android:id="@+id/tv_signup_title_confirm_password"
                style="@style/title_h3_14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm_password" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_signup_input_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxStrokeWidth="1dp"
                app:boxStrokeColor="@color/color_main"
                app:hintEnabled="false"
                tools:errorEnabled="false"
                > <!-- Evita que el hint flotante aparezca en rojo -->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_signup_input_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:padding="22dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_secondary_grey"
                    android:fontFamily="@font/inter_font"
                    android:hint="@string/asterisks_password"/> <!-- Mueve el hint dentro del campo -->
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Botón de registro -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_signup_button"
            style="@style/button_solid_16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_main"
            android:padding="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/signup_button"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_signup_container_confirm_password" />

        <!-- Términos y condiciones -->
        <LinearLayout
            android:id="@+id/ll_container_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:errorEnabled="true"
            app:boxBackgroundMode="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_signup_button">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_terms"
                    style="@style/text_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terms"/>

                <TextView
                    android:id="@+id/tv_terms_url"
                    style="@style/text_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/terms_url"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Bloque de otras formas de inicio sesión -->
        <LinearLayout
            android:id="@+id/ll_container_mail_access"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_signup_button">

            <TextView
                android:id="@+id/tv_title_mail_access"
                style="@style/h3_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/google_outlook" />



            <LinearLayout
                android:id="@+id/ll_login_container_google_outlook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Botón Google -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mb_google"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="65dp"
                    android:layout_height="69dp"
                    android:layout_marginEnd="6dp"
                    android:contentDescription="@string/content_desc_google"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text=""
                    app:cornerRadius="16dp"
                    app:icon="@drawable/icon_google"
                    app:iconGravity="start"
                    app:iconSize="48dp"
                    app:iconTint="@null"
                    app:strokeColor="@color/color_secondary_grey"
                    app:strokeWidth="1dp" />

                <!-- Botón Outlook -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mb_outlook"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="65dp"
                    android:layout_height="69dp"
                    android:layout_marginStart="6dp"
                    android:contentDescription="@string/content_desc_outlook"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text=""
                    app:cornerRadius="12dp"
                    app:icon="@drawable/icon_outlook"
                    app:iconGravity="start"
                    app:iconSize="48dp"
                    app:iconTint="@null"
                    app:strokeColor="@color/color_secondary_grey"
                    app:strokeWidth="1dp" />
            </LinearLayout>

        </LinearLayout>


        <!-- Bloque de otras formas de inicio sesión -->

        <!-- Enlace para login -->
        <TextView
            android:id="@+id/tv_no_signup_register"
            style="@style/text_link_underlined"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/nosignup_register"
            android:layout_marginTop="6dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_container_mail_access" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>

