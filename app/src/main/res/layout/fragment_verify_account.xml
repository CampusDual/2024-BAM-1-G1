<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Título -->
    <TextView
        android:id="@+id/tv_verify_account_title"
        style="@style/title_30sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="54dp"
        android:text="@string/verify_account_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tv_verify_account_subtitle"
        style="@style/subtitle_16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="6dp"
        android:text="@string/verify_account_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_verify_account_title"/>

    <!-- 4x Inputs -->
    <LinearLayout
        android:id="@+id/ll_verification_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_verify_account_subtitle">

        <EditText
            android:id="@+id/et_verification_code_1"
            style="@style/VerificationCodeEditText"
            android:text="@string/input_empty"
            android:layout_marginEnd="18dp" />

        <EditText
            android:id="@+id/et_verification_code_2"
            style="@style/VerificationCodeEditText"
            android:layout_marginEnd="18dp" />

        <EditText
            android:id="@+id/et_verification_code_3"
            style="@style/VerificationCodeEditText"
            android:layout_marginEnd="18dp" />

        <EditText
            android:id="@+id/et_verification_code_4"
            style="@style/VerificationCodeEditText" />
    </LinearLayout>

    <!-- Botón de verificación -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_signup_button"
        style="@style/button_solid_16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_main"
        android:padding="18dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"
        android:text="@string/signup_button"
        app:cornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_verification_code" />

    <!-- Texto de "No recibí el código" -->
    <TextView
        android:id="@+id/tv_login_forgot_password"
        style="@style/text_link_underlined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/verify_account_not_received"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_signup_button" />

</androidx.constraintlayout.widget.ConstraintLayout>