<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="896dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98" />


    <!-- Título -->
    <TextView
        android:id="@+id/tv_verify_account_title"
        style="@style/title_30sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="@string/verify_account_title"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_start"
        app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_start" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tv_verify_account_subtitle"
        style="@style/subtitle_16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/verify_account_subtitle"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_start"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end"
        app:layout_constraintTop_toBottomOf="@id/tv_verify_account_title"/>

    <!-- 4x Inputs  -->
    <LinearLayout
        android:id="@+id/ll_verification_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_verify_account_subtitle">

        <EditText
            android:id="@+id/et_verification_code_1"
            style="@style/VerificationCodeEditText"
            android:layout_marginEnd="18dp" />

        <EditText
            android:id="@+id/et_verification_code_2"
            style="@style/VerificationCodeEditText"
            android:layout_marginEnd="18dp" />

        <EditText
            android:id="@+id/et_verification_code_3"
            style="@style/VerificationCodeEditText"
            android:layout_marginEnd="18dp" />

        <EditText
            android:id="@+id/et_verification_code_4"
            style="@style/VerificationCodeEditText" />

    </LinearLayout>


    <!-- Creamos botón con materialButton -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_signup_button"
        style="@style/button_solid_16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_main"
        android:padding="18dp"
        android:layout_marginTop="24dp"
        android:text="@string/signup_button"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_start"
        app:layout_constraintTop_toBottomOf="@+id/ll_verification_code">
    </com.google.android.material.button.MaterialButton>


    <!-- TextView olvidaste la contraseña -->
    <TextView
        android:id="@+id/tv_login_forgot_password"
        style="@style/text_link_underlined"
        android:layout_width="365dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="@string/verify_account_not_received"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
        app:layout_constraintTop_toBottomOf="@+id/bt_signup_button" />


</androidx.constraintlayout.widget.ConstraintLayout>