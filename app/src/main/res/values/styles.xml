<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    crear estilo de texto-->


    <!--    subtítulo 16sp-->
    <style name="subtitle_16sp" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_subtitle_16sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <!--    Título 30sp -->
    <style name="title_30sp" parent="TextAppearance.AppCompat">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <!--    Botón 14sp librería material design   -->
    <style name="SocialLoginButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/color_main</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:height">44dp</item>

    </style>



</resources>